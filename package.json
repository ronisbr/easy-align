{
  "name": "easy-align",
  "displayName": "Easy Align",
  "description": "An interactive alignment plugin for VS Code.",
  "icon": "images/icon.png",
  "version": "0.1.0",
  "publisher": "ronisbr",
  "engines": {
    "vscode": "^1.107.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ronisbr/easy-align"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onCommand:EasyAlign.alignText"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "EasyAlign.alignText",
        "title": "Align Text"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
